<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kbb12.dms.AddFitness.AddFitnessActivity">

    <TextView
        android:id="@+id/typeOfActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of Activity"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Spinner
        android:id="@+id/activitySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="73dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/typeOfActivity"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/startDateAndTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activitySpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Start Date and Time" />

    <TextView
        android:id="@+id/dateAndTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="TextView"
        android:layout_above="@+id/DurationTV"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/setDateAndTimeIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:layout_below="@+id/startDateAndTimeTV"
        android:layout_toRightOf="@+id/dateAndTimeTV" />

    <TextView
        android:id="@+id/DurationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setDateAndTimeIB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Duration of Exercise" />

    <EditText
        android:id="@+id/hourEText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/DurationTV"
        android:layout_toLeftOf="@+id/typeOfActivity"
        android:layout_toStartOf="@+id/typeOfActivity" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hours"
        android:layout_alignBaseline="@+id/hourEText"
        android:layout_alignBottom="@+id/hourEText"
        android:layout_toRightOf="@+id/hourEText"
        android:layout_toEndOf="@+id/hourEText" />

    <EditText
        android:id="@+id/minuteEText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_alignBaseline="@+id/hourEText"
        android:layout_alignBottom="@+id/hourEText"
        android:layout_toRightOf="@+id/activitySpinner"
        android:layout_toEndOf="@+id/activitySpinner" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minutes"
        android:layout_alignBaseline="@+id/minuteEText"
        android:layout_alignBottom="@+id/minuteEText"
        android:layout_toRightOf="@+id/minuteEText"
        android:layout_toEndOf="@+id/minuteEText" />

    <ImageButton
        android:id="@+id/saveActivityIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setDateAndTimeIB"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/setDateAndTimeIB"
        android:layout_marginBottom="50dp"
        app:srcCompat="@android:drawable/ic_menu_save" />

</RelativeLayout>
