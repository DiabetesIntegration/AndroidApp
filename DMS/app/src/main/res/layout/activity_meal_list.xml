<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".individualScreens.mealList.MealListActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addMealButton"
        android:background="@null"
        android:tint="@color/colorAccent"
        android:src="@android:drawable/ic_menu_add"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/addMealText"
        android:layout_toEndOf="@+id/addMealText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emptyMealList"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Straight to meal carb value..."
        android:textColor="@color/colorAccent"
        android:id="@+id/addCustomCarbMealText"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/addMealButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addCustomCarbMealButton"
        android:tint="@color/colorAccent"
        android:background="@null"
        android:src="@android:drawable/ic_menu_add"
        android:layout_alignBottom="@+id/addCustomCarbMealText"
        android:layout_toRightOf="@+id/addCustomCarbMealText"
        android:layout_toEndOf="@+id/addCustomCarbMealText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add a New Meal With Ingredients..."
        android:id="@+id/addMealText"
        android:textColor="@color/colorAccent"
        android:layout_alignBottom="@+id/addMealButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mealsList"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/addMealText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice"
        android:layout_above="@+id/addCustomCarbMealButton" />

</RelativeLayout>
